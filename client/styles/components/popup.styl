.popup
  position absolute
  top 0
  bottom 100%
  left 0
  right 100%
  width 100%
  height 100%
  background rgba(0, 0, 0, .75)
  overflow hidden

.popup-content
  background Black
  color White
  position relative
  width 300px
  margin 10px auto
  padding 10px
  overflow hidden
  min-height 150px
  text-align left

.popup-close
  position absolute
  top 20px
  right 10px
  cursor pointer
  line-height 0
  font-size 2em
