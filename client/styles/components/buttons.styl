.button, .button-story, .button-answer
  display inline-block
  padding 5px 10px
  cursor pointer
  appearance none
  border none

  &.red
    background Red
    color White

  &.green
    background Green
    color White

  &.gray
    background Gray
    color White

.button-story, .button-answer
  background Green
  width 300px

.button-answer
  background Orange
