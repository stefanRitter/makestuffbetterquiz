.card
  background White
  padding 20px 15px
  max-width 400px
  min-height 300px
  overflow hidden
  border-radius 3px
  box-shadow 5px 5px 10px #888888
  text-align left
  margin 30px auto
  
  img
    width 100%
    height auto
    display block
    margin-bottom 1.5em
  
  ul
    margin 0 15px
  
  &.question
    text-align center
    h2
      font-weight 500
      font-size 1.5em
