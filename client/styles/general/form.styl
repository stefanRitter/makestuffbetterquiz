.form
  margin 0 auto

  label
    display block
    font-weight 300
    text-align left
  
  input[type=text],
  input[type=email],
  input[type=number],
  input[type=password],
  textarea, select
    display block
    width 100%
    height 40px
    appearance none
    border-radius 0
    border 0
    border-bottom 2px solid TextDark
    box-shadow none
    text-indent 5px
    font-size 14px
    background rgba(255, 255, 255, 0.5)
    padding 0
    margin 0
    &:focus
      outline none

  textarea
    text-indent 0
  select
    width 293px
    height 41px

.form-group
  margin-top 1em

.required
  font-size 0.8em
  font-style italic
