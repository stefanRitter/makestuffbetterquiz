.container(ng-controller="storyController as vm")
  h2.margin {{vm.story.name}}

  .card(ng-show="vm.show('question')")
    h2 {{vm.question.question}}
    .margin-top(ng-repeat="answer in vm.question.answers")
      .button-answer(ng-click="vm.flip()") {{answer.answer}}

  .card(ng-show="vm.show('answer')")
    .margin-top
      {{vm.question.url}}
    .margin-top.phone-width.right.center-block
      .button.red(ng-click="vm.next()") Next

  .card(ng-show="vm.show('success')")
    {{vm.story.finalBlurb}}
    
    .margin-top.phone-width.right.center-block
      .button.red(ng-click="vm.next()") Next
